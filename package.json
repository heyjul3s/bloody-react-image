{
  "name": "bloody-react-image",
  "version": "0.1.0",
  "description": "An ReactJS image component with options for fallback imagery, placeholder when loading and fallback for IE with object-fit usage.",
  "main": "lib/index.js",
  "scripts": {
    "build": "rollup -c",
    "start": "start-storybook -p 5555",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-output": "jest --json --outputFile=.jest-test-results.json || true"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "react": ">=16.3.0"
  },
  "keywords": [
    "bloody-react-image",
    "bloody-react-img",
    "react",
    "reactjs",
    "reactjs-image",
    "react-image",
    "react-image-placeholder",
    "react image",
    "react image placeholder",
    "bloody react image",
    "bloody react img",
    "preloader",
    "placeholder",
    "loader",
    "plus",
    "image",
    "img"
  ],
  "author": "Julian Low <julian.cy.low@gmail.com>",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged ": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/.storybook/*",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.(tsx|ts)?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|jsx|ts|tsx)$",
    "verbose": false
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-storysource": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__addon-knobs": "^5.0.3",
    "@types/storybook__react": "^4.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "lint-staged": "^9.2.1",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "rollup": "^1.17.0",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {}
}
